{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "outDir": "dist",
      "jsx": "react",
      "noImplicitAny": true,
      "strict": true,
      "strictNullChecks": true,
      "noEmitOnError": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "alwaysStrict": true,
      "declaration": true,
      "sourceMap": true
    },
    "include": ["lib/**/*", "index.ts", "index.tsx"],
    "exclude": ["node_modules"]
  }